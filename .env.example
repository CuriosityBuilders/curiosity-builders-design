# ============================================
# Curiosity.Builders - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control

# ============================================
# Sanity CMS Configuration
# ============================================

# Your Sanity project ID
# Find it in your Sanity dashboard: https://sanity.io/manage
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id

# Your Sanity dataset name (usually "production" or "development")
NEXT_PUBLIC_SANITY_DATASET=production

# Sanity API version (optional, defaults to '2025-12-02')
# Update this when Sanity releases new API versions
NEXT_PUBLIC_SANITY_API_VERSION=2025-12-02

# Sanity API read token (required for fetching content)
# Create one in Sanity dashboard: https://sanity.io/manage > API > Tokens
# Needs "Viewer" permissions minimum
SANITY_API_READ_TOKEN=your-read-token

# ============================================
# Site Configuration
# ============================================

# Your production site URL (optional, defaults to http://localhost:3000)
# Used for metadata, Open Graph, and canonical URLs
# Example: https://curiosity.builders
NEXT_PUBLIC_SITE_URL=http://localhost:3000



# ============================================
# Development/Scripts Only (Optional)
# ============================================
# These are only needed for running migration scripts locally
# Not required for production deployment

# Sanity API write token (for migration scripts only)
# Create one in Sanity dashboard with "Editor" permissions
SANITY_API_WRITE_TOKEN=your-write-token

# Alternative token name used in some scripts
# SANITY_API_TOKEN=your-token
